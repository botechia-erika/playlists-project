{
  "compilerOptions": {
    "target": "ES6" /* Specify ECMAScript target version */,
    "sourceMap": true /* Generates corresponding '.map' file */,
    "module": "commonjs",
    "rootDir": "./src" /* Specify the root directory of input files */,
    "outDir": "./build" /* Redirect output structure to the directory */,
    "removeComments": true /* Do not emit comments to output */,
    "noImplicitAny": true /* Raise error on declarations with an implied 'any' type */,
    "noEmitOnError": true /* Disable emitting files if any type checking errors are reported */,
    "resolveJsonModule": true,
    "esModuleInterop": true /* Enable compatibility with CommonJS modules */,
    "strict": true,
    "typeRoots": ["./src/@types"],
    "skipLibCheck": true /* Skips type checking of declaration files */
  },
  "include": ["./src/**/*", "./uploads/**/*", "./build/**/*", "./database/**/*" /* Ensure everything in src is included */],
  "exclude": ["node_modules" /* Exclude node_modules folder */]
}
